<UserControl x:Class="YoutubeWPF.PlaylistVideoDisplayUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:YoutubeWPF"
             mc:Ignorable="d" 
             d:DesignHeight="90" d:DesignWidth="747.2">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="120" />
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Image Grid.Column="0" x:Name="thumbnail"/>
        <StackPanel Grid.Column="1">
            <TextBlock x:Name="title" FontWeight="Bold" FontSize="24" Foreground="#FF372525"></TextBlock>
            <TextBlock x:Name="channel" Foreground="#FF767171" FontSize="16"></TextBlock>
            <TextBlock x:Name="description" FontSize="14" Height="37" MaxHeight="37" Margin="0,0,0.2,0"></TextBlock>
        </StackPanel>
    </Grid>
</UserControl>
