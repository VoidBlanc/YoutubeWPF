<UserControl x:Class="YoutubeWPF.PlaylistHeaderDisplayUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:YoutubeWPF"
             mc:Ignorable="d" 
             d:DesignHeight="180" d:DesignWidth="747.2">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="320" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        
        <Image Grid.Column="0" x:Name="playlistThumbnail"/>
        <StackPanel Grid.Column="1">
            <TextBlock x:Name="playlistTitle"></TextBlock>
        </StackPanel>
    </Grid>
</UserControl>
